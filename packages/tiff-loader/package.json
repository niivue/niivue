{
  "name": "@niivue/tiff-loader",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/loader.js"
    }
  },
  "files": [
    "src/lib/loader.ts",
    "build/*"
  ],
  "keywords": [
    "nii",
    "tiff",
    "loader",
    "tif",
    "niivue"
  ],
  "author": "NiiVue developers",
  "license": "BSD-2-Clause",
  "description": "A tiff image loader to be used with the NiiVue useLoader method",
  "scripts": {
    "cli": "tsx ./src/tiff2nii.ts ./tests/testData/shapes_deflate.tif",
    "dev": "vite",
    "build:demo": "vite build",
    "build": "tsup",
    "preview": "vite preview",
    "test": "vitest",
    "pretty": "prettier --write \"**/*.ts\"",
    "pub": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "geotiff": "^2.1.3",
    "nifti-reader-js": "^0.7.1",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@niivue/niivue": "^0.49.0",
    "@types/xmldom": "^0.1.34",
    "tsup": "^8.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3",
    "vite": "^6.0.5",
    "vitest": "^2.1.8",
    "prettier": "*"
  }
}
