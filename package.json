  "bugs": {
    "url": "https://github.com/niivue/niivue/issues"
  },
  "homepage": "https://github.com/niivue/niivue#readme",
  "devDependencies": {
    "buffer": "^6.0.3",
    "express": "^4.17.1",
    "gl-matrix": "^3.3.0",
    "http-server": "^0.12.3",
    "jest": "^27.0.6",
    "jest-puppeteer": "^5.0.4",
    "nifti-reader-js": "^0.5.4",
    "pixelmatch": "^5.2.1",
    "puppeteer": "^9.1.1",
    "rxjs": "^7.1.0",
