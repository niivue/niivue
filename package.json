{
  "name": "@niivue/niivue",
  "version": "0.0.1",
  "description": "minimal webgl2 nifti image viewer",
  "main": "dist/niivue.js",
  "scripts": {
    "build": "npx webpack && npm run copy-test && npm run copy-docs",
    "copy-test": "cp ./dist/niivue.js ./test/niivue.js",
    "copy-docs": "cp -r ./test/* ./docs/",
    "test": "echo \"See ./tets/index.html\" && exit 1",
    "publish": "npm publish --access public"
  },
  "files": [
    "dist/niivue.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niivue/niivue.git"
  },
  "keywords": [
    "niivue",
    "webgl2",
    "nifti",
    "image",
    "viewer"
  ],
  "author": "niivue authors",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/niivue/niivue/issues"
  },
  "homepage": "https://github.com/niivue/niivue#readme",
  "devDependencies": {
    "buffer": "^6.0.3",
    "gl-matrix": "^3.3.0",
    "http-server": "^0.12.3",
    "nifti-reader-js": "^0.5.4",
    "webpack": "^5.34.0",
    "webpack-cli": "^4.6.0"
  }
}
